<div class="container">
  <h1>{{title}}</h1>
  <hr />
  <div class="row">
    <div class="col-md-6">
      <form action="/products/update-products/{{products.id}}" method="post">
          <div class="form-group">
              <input type="text" name="product_name" class="form-control" placeholder="Product Name" value="{{products.name}}"/>
          </div>
          <div class="form-group">
              <input type="text" name="sku" class="form-control" placeholder="SKU" value="{{products.sku}}" />
          </div>
          <div class="form-group">
              <input type="text" name="price" class="form-control" placeholder="Price" value="{{products.price}}" />
          </div>
          <div class="form-group">
              <button class="btn btn-info">Save Product</button>
          </div>
      </form>
    </div>
  </div>
</div>